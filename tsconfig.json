{
    "compilerOptions":  {
        "target": "es5",
        "moduleResolution": "node",
        "baseUrl": "source",        
        "outDir": "./distribution/",
        "sourceMap": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types/"
        ],
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "source/**/*"
    ],
    "exclude": [
        "node_modules",
        "distribution",
        "typings"
    ]
}